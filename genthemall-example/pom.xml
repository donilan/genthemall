<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.ii2d</groupId>
		<artifactId>genthemall-parent</artifactId>
		<version>0.2.0-SNAPSHOT</version>
	</parent>
	<artifactId>genthemall-example</artifactId>
	<name>genthemall-example</name>
	<url>http://maven.apache.org</url>
	
	<dependencies>
		<dependency>
			<groupId>com.ii2d</groupId>
			<artifactId>dbase-template-mybatis</artifactId>
			<version>${dbase.version}</version>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<!-- generate config file -->
				<!-- mvn genthemall-maven-plugin:generate-config -->
				
				<!-- generate code by template files -->
				<!-- mvn genthemall-maven-plugin:generate -->
				<groupId>com.ii2d</groupId>
				<artifactId>genthemall-maven-plugin</artifactId>
				<version>${project.version}</version>
				<configuration>
					<!-- for generate config file -->
					<configTemplateFilePath>classpath:com/ii2d/genthemall/template/core/conf/config.template</configTemplateFilePath>
					<configDestPath>${project.build.directory}/genthemall/</configDestPath>
					<driverClass>com.mysql.jdbc.Driver</driverClass>
					<url>jdbc:mysql://127.0.0.1:3306/mysql</url>
					<username>root</username>
					<password>sa</password>
					<tables>user,db,host,time_zone,time_zone_name</tables>
					
					<!-- for generate code by template files -->
					<destPath>${project.build.directory}/genthemall/</destPath>
					<templatePath>src/main/template</templatePath>
					
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
